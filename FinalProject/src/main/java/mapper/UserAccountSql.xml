<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="job.data.login.UserAccountMapper">
	 <select id="getTotalCountOfUserAccount" resultType="int">
		select count(*) from user_account
	</select>
	
	<insert id="insertUserAccount" parameterType="user">
	 	insert into user_account (username, hp, password, email, role, create_date)
	 	values (#{username},#{hp},#{password},#{email}, #{role}, now())
	</insert>
	
	<select id="findByUsername" parameterType="user" >
		SELECT * FROM user_account WHERE username = #{username}
	</select>
</mapper>


